<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="세계로 미래로 꿈을 펼치는 선린인터넷고등학교"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/title"
        android:bottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textSize="35sp"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        android:text="선린인터넷고등학교
          대신 전해드립니다"
        />
    <TextView
        android:id="@+id/Q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:text="당신의 학과를 골라주세요!!"
        />

    <Button
        android:id="@+id/protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#ff0000"
        android:text="정보보호과"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/Q1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/software"
        style="@android:style/Widget.Material.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:text="소프트웨어과"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/protect" />
    <Button
        android:id="@+id/design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/software"
        android:background="#000080"
        android:text="콘텐츠디자인과"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/it"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/design"
        android:background="#008000"
        android:text="IT경영과"
        android:textColor="#fff"

        />


    <ImageView
        android:id="@+id/cutejs"
        android:layout_width="259dp"
        android:layout_height="157dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/sunrin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/it"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sunrinwk"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:background="#fff"
        android:layout_marginTop="8dp"
        android:text="선린위키 가시는 길"
        android:textColor="@android:color/background_dark"
        app:layout_constraintTop_toBottomOf="@+id/cutejs"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bamboo"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:background="#fff"
        android:text="sunrinfacebook"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/sunrinwk"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="551dp" />

</androidx.constraintlayout.widget.ConstraintLayout>