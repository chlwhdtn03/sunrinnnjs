<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".cb1">

    <TextView
        android:id="@+id/sfttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Software Club"
        android:gravity="center"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints"
        />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소프웨어과 동아리"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/sf1"
        app:layout_constraintTop_toBottomOf="@+id/sfttitle"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Club"
        android:textColor="#ffffff"
        android:id="@+id/ptcstitle"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sf1"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>