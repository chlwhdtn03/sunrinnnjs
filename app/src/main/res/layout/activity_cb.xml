<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".cb">


    <TextView
        android:id="@+id/ptctitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information Protection Club"
        android:gravity="center"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints"
        />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보보호과 동아리"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/pt1"
        app:layout_constraintTop_toBottomOf="@+id/ptctitle"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Major Club"
        android:textColor="#ffffff"
        android:id="@+id/ptcstitle"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pt1"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/ptcstitle"
        android:layout_width="match_parent"
        android:layout_height="500dp"

  />

</androidx.constraintlayout.widget.ConstraintLayout>